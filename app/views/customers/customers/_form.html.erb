 <hr class="my-4">
<%= form_with model: customer, local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <hr class="my-4">
  <h4>Name</h4>
  <%= f.text_field :name, autofocus: true, placeholder:"名前"%>
  <hr class="my-4">
  <h4>自己紹介</h4>
  <%= f.text_area :body, autofocus: true, placeholder:"自己紹介"%>
  <hr class="my-4">
  <%= f.submit "編集を保存" %>
<% end %>